{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/embed_chatbot/**",
        "destination": "/embed_chatbot.html"
      },
      {
        "source": "**",              
        "destination": "/index.html" 
      }
    ]
  }
}
